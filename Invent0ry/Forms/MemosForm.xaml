<Window x:Class="Invent0ry.Forms.MemosForm"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Invent0ry.Forms"
        mc:Ignorable="d"
        Title="Memos" Height="607" Width="800" Loaded="Window_Loaded">
    <Grid>
        <Grid HorizontalAlignment="Left" Height="505" Margin="10,10,0,0" VerticalAlignment="Top" Width="772">
            <Image x:Name="image" HorizontalAlignment="Center"  VerticalAlignment="Center" Stretch="Uniform"/>
            <TextBlock x:Name="text_no_memo" HorizontalAlignment="Center" TextWrapping="Wrap" Text="Sorry, but there are no memo files in the selected folder." VerticalAlignment="Center" Visibility="Hidden"/>
        </Grid>
        <Button x:Name="nextButton" Content="&gt;&gt;" HorizontalAlignment="Left" Margin="647,530,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="nextButton_Click"/>
        <Button x:Name="previousButton" Content="&lt;&lt;" HorizontalAlignment="Left" Margin="70,530,0,0" VerticalAlignment="Top" Width="75" Height="29" Click="previousButton_Click"/>
    </Grid>
</Window>
